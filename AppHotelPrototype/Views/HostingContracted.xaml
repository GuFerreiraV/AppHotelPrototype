<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppHotelPrototype.Views.HostingContracted"
             Title="HostingContracted"
             NavigationPage.HasNavigationBar="False"
             >
    <VerticalStackLayout
        VerticalOptions="CenterAndExpand"
        >

        <Label Text="Suíte de Luxo"
               TextColor="{StaticResource Primary}"
               FontFamily="MichromaRegular"
               FontSize="30"
               HorizontalTextAlignment="Center"
               />

        <Frame Margin="10">
            <HorizontalStackLayout>
                <HorizontalStackLayout>
                    <Label Text="Adultos: "/>
                    <Label Text="2" TextColor="{StaticResource Primary}"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout>
                    <Label Text="Crianças: "/>
                    <Label Text="2" TextColor="{StaticResource Primary}"/> 
                </HorizontalStackLayout>
            </HorizontalStackLayout>
        </Frame>
        <Frame Margin="10">
            
            <Grid ColumnDefinitions="*, *, *"
             RowDefinitions="Auto, Auto">

                <Label Grid.Row="0" Grid.Column="0" Text="Check-in:"/>
                <Label Grid.Row="0" Grid.Column="1" Text="Check-out:"/>
                <Label Grid.Row="0" Grid.Column="2" Text="Estadia:"/>

                <Label Grid.Row="1" Grid.Column="0" Text="01/07/2025"/>
                <Label Grid.Row="1" Grid.Column="1" Text="07/07/2025"/>
                <Label Grid.Row="1" Grid.Column="2" Text="6"/>

            </Grid>

        </Frame>


        <Frame Margin="10">
            
            <HorizontalStackLayout>
                <Label Text="Valor Total: "/>
                <Label Text=" R$750,00"/>
            </HorizontalStackLayout>

        </Frame>

        <Button Text="Voltar" 
                HorizontalOptions="Center"
                Clicked="Button_Clicked"/>
    </VerticalStackLayout>
   
</ContentPage>